/**index.wxss**/
.swiper__container{
    height: 11rem;
}
.swiper__desc{
    position: absolute;
    width:100%;
    bottom: 0;
    padding: 10rpx;
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    font-size: 28rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper__item{
    display: block;
    width: 100%;
    height: 11rem;
}

.swiper__id{
    float: right;
    padding-right: 20rpx;
    font-weight: 700;
}

/* header 部分导航 */
.header{
    width: 100%;
    background-color: #fff;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    height: 64rpx;
    position: relative;
}
.sv__container{
   margin-left: 10rpx; 
  width: 85%;
  height: 90rpx;
  white-space: nowrap;
}
.sv__item{
  font-size: .8rem;
    padding: 14rpx;
    display: inline-block;
}
.sv__item.active{
  border-bottom:2px solid red; 
}
.sv-manager{
    width: 1rem;
    height: 1rem;
    vertical-align: center;
}
.sv-search{
  margin-left: 20rpx;
  width: 1.5rem;
  height: 1.5rem;
  vertical-align: center;
}

.msg-alert{
  width: 100%;
  height: 0;
  line-height: 1.8rem;
  background: #ff6060;
  text-align: center;
  color: #fff;
  font-size: .85rem;
  transition: .5s;
}

.msg-alert.active{
  height: 1.8rem;
}
.rec-box{
  position: fixed;
  bottom: 0;
  right: -100%;
  width: 12rem;
  /* height: 6rem; */
  background: white;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 15rpx;
  color: #000;
  transition: .5s ease;
  z-index: 999;
}

.rec-box.active{
  right: 0;
}
.rec-box:hover .btn-close{
  display: block;
}
.rec-box .title{
  font-size: .8rem;
}
.rec-box .desc{
  display: -webkit-box;   
  -webkit-box-orient: vertical;   
  -webkit-line-clamp: 4;   
  overflow: hidden;  
  margin-top: 10rpx;
  font-size: .7rem;
  color: rgba(0,0,0,.5);
}
.rec-box .btn-close{
  display: none;
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 1.6rem;
  text-align: center;
  line-height: 200%;
  font-size: .8rem;
  color: #fff;
  background: rgba(0,0,0,.5);
}
