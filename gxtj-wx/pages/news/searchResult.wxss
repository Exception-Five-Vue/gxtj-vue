/**index.wxss**/
.swiper__container{
    height: 11rem;
}
.swiper__desc{
    position: absolute;
    width:100%;
    bottom: 0;
    padding: 10rpx;
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    font-size: 28rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper__item{
    display: block;
    width: 20rem;
    height: 11rem;
}

.swiper__id{
    float: right;
    padding-right: 20rpx;
    font-weight: 700;
}

/* header 部分导航 */
.header{
    width: 100%;
    background-color: #fff;
    font-size: 30rpx;
    display: flex;
}

.input-box{
  display: flex;
  flex: 18rem;
  margin-left: 1rem;
  background: #f8f8f8;
}
.btn-cancel{
  flex: 2rem;
  margin-left: 1rem;
  background: transparent;
  color:red;
}
.icon-search{
  margin-left: .2rem;
  margin-top: .2rem;
  flex: 1rem;
  width: 1rem;
  height: 1rem;
}
.input-box input{
  padding-left: .3rem;
  flex: 16rem;
}
.sv__container{
   margin-left: 10rpx; 
  width: 18rem;
  height: 90rpx;
  white-space: nowrap;
}
.sv__item{
    padding: 14rpx;
    display: inline-block;
}
.sv__item.active{
  border-bottom:2px solid red; 
}
.sv-manager{
    width: 1rem;
    height: 1rem;
    vertical-align: center;
}
.sv-search{
  margin-left: 20rpx;
  width: 1.5rem;
  height: 1.5rem;
  vertical-align: center;
}